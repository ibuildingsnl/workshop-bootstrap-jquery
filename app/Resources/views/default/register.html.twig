{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-sm-6 col-sm-offset-2">
            <h1>Register</h1>

            <form action="{{ path('register') }}" method="post" data-parsley-validate>
                <div class="form-group">
                    <label for="exampleInputEmail1">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Email" required data-parsley-unique-email>
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Password</label>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" required pattern="(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9]).{8,}"
                           data-parsley-error-message="Your password should be at least 8 characters long, and contain at least one lower case letter ('a'), one upper case letter ('A') and one number ('1').">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Repeat password</label>
                    <input type="password" class="form-control" id="exampleInputPassword2" data-parsley-equalto="#exampleInputPassword1" placeholder="Repeat password" required>
                </div>

                <button class="btn btn-default">Register</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/register.js') }}"></script>
{% endblock %}
